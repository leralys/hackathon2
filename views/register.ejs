<h1><%- title %></h1>
<div class="container">
  <div class="row mt-3">
    <div class="col-3"></div>
    <div class="col-md-6">
      <form action="/register" method="POST" class="form p-5 mb-4">
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input type="text" class="form-control" id="name" name="name" required autocomplete="off" placeholder="name">
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email address</label>
          <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" required autocomplete="off" placeholder="email">
          <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" class="form-control" id="password" name="password" required autocomplete="off" placeholder="password">
        </div>
        <div class="d-grid gap-2">
          <button id="register" class="btn btn-success text-nowrap rounded-pill" type="submit">Sign up</button>
          <a href="/login" class="btn btn-outline-info text-nowrap rounded-pill" role="button">Back to login</a>
          <!-- <a href="/login" id="login" class="btn btn-outline-info text-nowrap rounded-pill" type="submit" role="button">Back to login</a> -->
        </div>
      </form>
    </div>
  </div>
</div>

